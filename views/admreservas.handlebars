<style>
        table,
        tr,
        th {
                border: 1px solid black;
        }

        .tabela {
                display: flex;
                justify-content: center;
        }

        .tabela h1 {
                margin: 50px;
                margin-bottom: 40px;
        }

        .tabela table {
                margin: 50px;
                margin-top: 10px;
                margin-bottom: 0px;
        }

